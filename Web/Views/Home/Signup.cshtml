@{
    ViewBag.Title = Resources.SignupForm_HeaderText;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Web.GlobalResources
<div class="content">
    <div id="SignupFormContainer">
        <div class="row-fluid login-title">
            <h2>@Resources.SignupForm_HeaderText</h2>
        </div>
        <div class="row-fluid login-form form-field col-lg-4 col-md-6 col-sm-12">
            <div class="row-fluid responsiveForm">
                <form novalidate method="post" class="needs-validation" name="signupForm" action='@Url.Action("SignIn", "Home")'>
                        <div class="form-group">
                            <label for="Email">@Resources.SignupForm_Email_Label:</label>
                            <input type="email" class="form-control" id="Email" placeholder="@Resources.SignupForm_Email_Label" required>
                            <div class="invalid-feedback" id="EmailFeedback"></div>
                        </div>
                        <div class="form-group">
                            <label for="Password">@Resources.SignupForm_Password_Label:</label>
                            <input type="password" class="form-control" id="Password" placeholder="@Resources.SignupForm_Password_Label" required>
                            <div class="invalid-feedback" id="PasswordFeedback">
                                
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="checkbox" id="chkShowPassword" />
                            <label for="chkShowPassword">@Resources.SignupForm_ShowPassword_Text</label>
                        </div>
                        <input type="submit" id="SignupButton" class="btn btn-primary btn-large" value="@Resources.SignupForm_SubmitButton_Text" />
                        <div class="invalid-feedback" id="validationSummary">
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/Scripts/App/Home/signup.js"></script>
    <script type="text/javascript">
        $(document).ready(() => {
            var SignupFormObj = new SignupForm();
            SignupFormObj.initialize();
        });
    </script>
}