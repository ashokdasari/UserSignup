@{
    ViewBag.Title = Resources.SigninForm_HeaderText;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Web.GlobalResources
<div class="content">
    <div id="SigninFormContainer">
        <div class="row-fluid login-title">
            <h2>@Resources.SigninForm_HeaderText</h2>
        </div>
        <div class="row-fluid login-form form-field col-lg-4 col-md-6 col-sm-12">
            <div class="row-fluid responsiveForm">
                <form name="signinForm" novalidate method="post" action='@Url.Action("Profile", "User")'>
                    <div class="form-group">
                        <label for="Email">@Resources.SigninForm_Email_Label:</label>
                        <input type="email" class="form-control invalid" id="Email" placeholder="@Resources.SigninForm_Email_Label" required>
                        <div class="invalid-feedback" id="EmailFeedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="password">@Resources.SigninForm_Password_Label:</label>
                        <input type="password" class="form-control" id="Password" placeholder="@Resources.SigninForm_Password_Label" required>
                        <div class="invalid-feedback" id="PasswordFeedback">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="VerificationCode">@Resources.SigninForm_VerificationCode_Label:</label>
                        <input type="number" class="form-control invalid" id="VerificationCode"  minlength="6" maxlength="6" placeholder="@Resources.SigninForm_VerificationCode_Label" required>
                        <div class="invalid-feedback" id="VerificationCodeFeedback"></div>
                    </div>
                    <div class="form-group">
                        <input type="checkbox" id="chkShowPassword" />
                        <label for="chkShowPassword">@Resources.SigninForm_ShowPassword_Text</label>
                    </div>
                    <input type="hidden" id="UserId" name="UserId" />
                    <input type="button" id="SigninButton" class="btn btn-primary btn-large" value="@Resources.SigninForm_SubmitButton_Text" />
                    <input type="submit" id="SubmitButton" style="display:none" />
                    <div class="invalid-feedback" id="validationSummary">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/Scripts/App/Home/Signin.js"></script>
    <script type="text/javascript">
        $(document).ready(() => {
            var SigninFormObj = new SigninForm();
            SigninFormObj.initialize();
        });
    </script>
}